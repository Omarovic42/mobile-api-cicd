version: '3.8'
services:
  api:
    image: ghcr.io/omarovic42/mobile-api:{{ api_version }}
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV={{ 'production' if inventory_hostname in groups['production'] else 'staging' }}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
